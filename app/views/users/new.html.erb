<h1>登録画面</h1>

    <%= form_for(@user, url: "/users/create",method: :post) do |f| %>

      <%= f.label :name %></br>
      <%= f.text_field :name %>
</br>
      <%= f.label :email %></br>
      <%= f.email_field :email %>
</br>

      <%= f.label :password %></br>
      <%= f.password_field :password %>
</br>

      <%= f.label :password_confirmation, "Confirmation" %></br>
      <%= f.password_field :password_confirmation %>
</br>
      
      <%= f.submit "登録", class: "btn btn-light btn-sm" %>
    <% end %>